<div class="grid gap-0 grid-cols-{{this.sqrtPixels}}"
  data-test-animation-frame
  ...attributes
>
  {{#each this.trackedPixels as |pixel index|}}
    <Swatch
      class="mr-1 mb-1"
      data-test-pixel={{index}}
      @shade={{pixel.color}}
      {{on "click" (fn this.updatePixelColor pixel)}}
    />
  {{/each}}
</div>